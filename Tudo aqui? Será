    /* Estilo dos blocos */
    .bloco {
      border:2px solid #ff1493;
      padding:15px;
      margin-bottom:30px;
      border-radius:10px;
      background:#ffe4f2;
    }

    /* Bot√µes rosa pink */
    .btn-pink {
      border:none;
      padding:8px 15px;
      margin:3px;
      cursor:pointer;
      border-radius:5px;
      font-weight:bold;
      color:#fff;
      background-color:#ff1493; /* rosa pink forte */
      transition:0.3s;
    }
    .btn-pink:hover {
      background-color:#ff69b4; /* rosa claro no hover */
    }

    /* Resultado rosa pink */
    #resultado {
      color:#ff1493;
      font-size:18px;
      font-weight:bold;
    }

    /* Rel√≥gio em destaque */
    #datahora {
      color:#ff1493;
      font-size:20px;
      font-weight:bold;
    }

    /* Caixa da anima√ß√£o */
    #caixa {
      width:100px;
