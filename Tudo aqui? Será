<body>

  <h1>Prova JavaScript - Edi√ß√£o Pink</h1>

  <!-- 1. Calculadora -->
  <div class="bloco">
    <h2>1. Calculadora</h2>
    <input id="num1" type="number" placeholder="Primeiro n√∫mero">
    <input id="num2" type="number" placeholder="Segundo n√∫mero">
    <br>
    <button class="btn-pink" onclick="calc('+')">+</button>
    <button class="btn-pink" onclick="calc('-')">-</button>
    <button class="btn-pink" onclick="calc('*')">*</button>
    <p id="resultado"></p>
  </div>

  <!-- 2. Lista -->
  <div class="bloco">
    <h2>2. Lista de coisas favoritas</h2>
    <input id="carro" placeholder="Digite algo (ex: s√©rie, livro, m√∫sica)">
    <input id="quantidade" type="number" placeholder="Quantidade">
    <button class="btn-pink" onclick="adicionarItem()">Adicionar</button>
    <ul id="lista"></ul>
  </div>

  <!-- 3. Rel√≥gio -->
  <div class="bloco">
    <h2>3. Rel√≥gio em tempo real</h2>
    <p id="datahora"></p>
  </div>

  <!-- 4. Formul√°rio -->
  <div class="bloco">
    <h2>4. Formul√°rio de cadastro</h2>
    <form onsubmit="event.preventDefault(); cadastrado();">
      <input placeholder="Nome" required>
      <input placeholder="Email" type="email" required>
      <button class="btn-pink" type="submit">Cadastrar</button>
    </form>
    <p id="msg"></p>
  </div>

  <!-- 5. Anima√ß√£o -->
  <div class="bloco">
    <h2>5. Anima√ß√£o com jQuery</h2>
    <div id="caixa"></div>
    <br>
    <button class="btn-pink" onclick="animar()">Animar</button>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    // 1. Calculadora
    function calc(op) {
      let n1 = Number(document.getElementById("num1").value);
      let n2 = Number(document.getElementById("num2").value);
      let res = 0;
      if(op === "+") res = n1 + n2;
      if(op === "-") res = n1 - n2;
      if(op === "*") res = n1 * n2;
      document.getElementById("resultado").innerText = "Resultado = " + res;
    }

    // 2. Lista
    function adicionarItem(){
      let item = document.getElementById("carro").value;
      let qtd = document.getElementById("quantidade").value;
      if(item && qtd){
        let li = document.createElement("li");
        li.innerText = `${item} ‚Äî ${qtd}x`;
        li.style.color = "#ff1493";
        document.getElementById("lista").appendChild(li);
      }
    }

    // 3. Rel√≥gio
    setInterval(() => {
      let agora = new Date();
      document.getElementById("datahora").innerText = agora.toLocaleString();
    }, 1000);

    // 4. Cadastro
    function cadastrado(){
      document.getElementById("msg").innerText = "Cadastro feito com sucesso üíñ";
    }

    // 5. Anima√ß√£o
    function animar(){
      $("#caixa").animate({left: '250px', opacity:0.6}, 1000)
                 .animate({top: '50px', opacity:1}, 800)
                 .animate({left: '0px', top:'0px'}, 600);
    }
  </script>

</body>
