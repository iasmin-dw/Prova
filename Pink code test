  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
    // 1. Calculadora
    function calc(op) {
      let n1 = Number(document.getElementById("num1").value);
      let n2 = Number(document.getElementById("num2").value);
      let res = 0;
      if(op === "+") res = n1 + n2;
      if(op === "-") res = n1 - n2;
      if(op === "*") res = n1 * n2;
      document.getElementById("resultado").innerText = "Resultado = " + res + " ðŸ’•";
    }

    // 2. Lista
    function adicionarItem(){
      let item = document.getElementById("carro").value;
      let qtd = document.getElementById("quantidade").value;
      if(item && qtd){
        let li = document.createElement("li");
        li.innerText = `${item} â€” ${qtd}x ðŸ’–`;
        li.style.color = "#ff1493";
        document.getElementById("lista").appendChild(li);
      }
    }

    // 3. RelÃ³gio
    setInterval(() => {
      let agora = new Date();
      document.getElementById("datahora").innerText = "ðŸ•’ " + agora.toLocaleString() + " ðŸ’•";
    }, 1000);

    // 4. Cadastro
    function cadastrado(){
      document.getElementById("msg").innerText = "Cadastro feito com sucesso ðŸ’–ðŸŽ€";
    }

    // 5. AnimaÃ§Ã£o
    function animar(){
      $("#caixa").animate({left: '250px', opacity:0.6}, 1000)
                 .animate({top: '50px', opacity:1}, 800)
                 .animate({left: '0px', top:'0px'}, 600);
    }
  </script>

